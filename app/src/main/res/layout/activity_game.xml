<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/lblDifficultyLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textSize="@dimen/text_size_screen_title"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnGame0"
                android:layout_width="@dimen/height_width_game_button"
                android:layout_height="@dimen/height_width_game_button"
                android:layout_marginTop="@dimen/game_button_spacing"
                android:tag="0"
                android:textSize="@dimen/text_size_game_button"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnGame1"
                android:layout_width="@dimen/height_width_game_button"
                android:layout_height="@dimen/height_width_game_button"
                android:layout_marginLeft="@dimen/game_button_spacing"
                android:layout_marginRight="@dimen/game_button_spacing"
                android:layout_marginTop="@dimen/game_button_spacing"
                android:tag="1"
                android:textSize="@dimen/text_size_game_button" />

            <Button
                android:id="@+id/btnGame2"
                android:layout_width="@dimen/height_width_game_button"
                android:layout_height="@dimen/height_width_game_button"
                android:layout_marginTop="@dimen/game_button_spacing"
                android:tag="2"
                android:textSize="@dimen/text_size_game_button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnGame3"
                android:layout_width="@dimen/height_width_game_button"
                android:layout_height="@dimen/height_width_game_button"
                android:tag="3"
                android:textSize="@dimen/text_size_game_button" />

            <Button
                android:id="@+id/btnGame4"
                android:layout_width="@dimen/height_width_game_button"
                android:layout_height="@dimen/height_width_game_button"
                android:layout_marginLeft="@dimen/game_button_spacing"
                android:layout_marginRight="@dimen/game_button_spacing"
                android:tag="4"
                android:textSize="@dimen/text_size_game_button" />

            <Button
                android:id="@+id/btnGame5"
                android:layout_width="@dimen/height_width_game_button"
                android:layout_height="@dimen/height_width_game_button"
                android:tag="5"
                android:textSize="@dimen/text_size_game_button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnGame6"
                android:layout_width="@dimen/height_width_game_button"
                android:layout_height="@dimen/height_width_game_button"
                android:tag="6"
                android:textSize="@dimen/text_size_game_button" />

            <Button
                android:id="@+id/btnGame7"
                android:layout_width="@dimen/height_width_game_button"
                android:layout_height="@dimen/height_width_game_button"
                android:layout_marginLeft="@dimen/game_button_spacing"
                android:layout_marginRight="@dimen/game_button_spacing"
                android:tag="7"
                android:textSize="@dimen/text_size_game_button" />

            <Button
                android:id="@+id/btnGame8"
                android:layout_width="@dimen/height_width_game_button"
                android:layout_height="@dimen/height_width_game_button"
                android:tag="8"
                android:textSize="@dimen/text_size_game_button" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>